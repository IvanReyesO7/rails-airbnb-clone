<div class="container mt-3">
  <h2><%=@flat.name%></h2>
  <img src="https://preview.redd.it/pl324nvi21wz.jpg?width=960&crop=smart&auto=webp&s=e529e9a4dc231c37c1038e10f9d6cd939c215d4b" alt="">
  <p><b><%=@flat.address%></b></p>
  <p><%=@flat.description%></p>
    <div>
          <div class="d-flex">
            <i class="fas fa-user-friends"></i>
            <p><em><%=@flat.number_of_guests%></em></p>
          </div>
          <div class="d-flex">
            <i class="fas fa-yen-sign"></i>
          <p><em><%=@flat.price_per_night%></em></p>
    </div>
    </div>
    <%= link_to 'Leave a review', new_flat_review_path(@flat) %>
    <p><%= link_to "Back", flats_path %> <%= link_to "Edit", edit_flat_path %></p>
    <h2>Reviews</h2>
    <ul class="list-group">
    <% @flat.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <% end %>
    </ul>
</div>